---
import Layout from "../layouts/Layout.astro";
import SpecialFooter from "../components/SpecialFooter.astro";
import Header from "../components/Header.astro";
---

<Layout title="Maxim - Extras">

    <div id="input" class="flex flex-col items-center mt-40">
        <h2 class="mb-14" id="text">Gib den Code ein:</h2>
        <div class="wrap-input-8">
            <input
                type="text"
                id="userInput"
                placeholder=" Enter Code"
                class="input text-dark mr-2"
            />
            <span class="focus-border">
                <i></i>
            </span>
        </div>
        <button
        id="submitButton"
        class="dark:bg-dark bg-white text-black dark:text-white"
        >Submit
    </button>
    </div>



    <div id="snooker" class="hidden mt-4 mb-6">
        <div class="flex flex-col items-start">
            <div class="-mt-20 w-[350px] rounded-2xl overflow-hidden bg-white" style="background-color: rgba(255, 255, 255, 0.7);">
                <h2 class="-mt-1 mb-2 text-dark" id="playernames">Gib die Spielernamen ein:</h2>
                <div class="flex flex-col items-center px-4">
                    <input
                        type="text"
                        id="playerNamesInput"
                        placeholder="Spielernamen eingeben"
                        class="text-black border border-black px-2 py-1 w-full mb-2 text-sm"
                        maxlength="20"
                    />
                    <button
                        id="submitplayerButton"
                        class="text-black border border-black rounded-full text-2xl h-10 w-10 flex justify-center items-center leading-none">
                        +
                    </button>
                </div>                
            </div>
        </div>
    </div>
    <p id="outputText" class="text-center">&nbsp;</p>
    <script src="../js/extras.js"></script>
</Layout>

---
import NavigationSocial from "./NavigationSocial.astro";

// Überprüft, ob die aktuelle Seite die Startseite oder andere definierte Seiten ist
const isIndex = ["/Impressum", "/Impressum/", "/Datenschutz", "/Datenschutz/", "/Extras", "/Extras/"].includes(Astro.url.pathname);
const isIndex2 = ["/Extras", "/Extras/"].includes(Astro.url.pathname);
const isIndex3 = ["/"].includes(Astro.url.pathname);
---

{!isIndex2 && (
  <>
    {isIndex3 ? (
      <footer id="footer" class="footer text-half-sm sm:text-xl md:text-2xl bg-black bg-opacity-30 dark:bg-white dark:bg-opacity-20 mt-20">

        <div class="relative lg:container md:mx-auto w-full lg:px-60 mt-20 mb-32">
          <h3 class="text-center transition-transform duration-300 transform hover:scale-105">Das sagen die Kunden:</h3>
        </div>
        
        <div class="mb-40">
          <script>
          document.addEventListener("DOMContentLoaded", function() {
            const isDarkMode = localStorage.getItem("theme") === "dark";
            const scriptUrl = isDarkMode 
              ? 'https://cdn.trustindex.io/loader.js?1a60658337913104ee867f3f954'
              : 'https://cdn.trustindex.io/loader.js?b45ce4333ebd2989b176b97ee25';

            const script = document.createElement('script');
            script.defer = true;
            script.async = true;
            script.src = scriptUrl;

            document.querySelector('div.relative').appendChild(script);
          });
          </script>
        </div>

        <script src="../js/smoothScroll.js"></script>

        <center>
        <button id="autoscroll" class="hidden xl:block rotate-180 hover:cursor-pointer dark:bg-dark bg-light rounded-full p-1 transition-transform duration-300 transform hover:scale-110 -translate-y-20">
          <div id="icon8">
            <img src={"/icons/arrow-small.svg"} class="w-10 h-10" />
          </div>
        </button>
        </center>

        <div class="flex justify-center my-4 -mt-10">
          <div class="border-t-2 border-white dark:border-dark w-1/2"></div>
        </div>

        <div class="text-center text-half-md mb-44 md:mb-40">
          <div class="flex flex-col md:flex-row md:justify-center md:space-x-4">
            <div class="flex justify-center space-x-4 mb-2 md:mb-0">
              <a href="/" class="px-4 py-2 text-white dark:text-dark rounded hover:text-blue-400 dark:hover:text-blue-400 transition">Start</a>
              <a href="/About" class="px-4 py-2 text-white dark:text-dark rounded hover:text-blue-400 dark:hover:text-blue-400 transition">About</a>
              <a href="/Unternehmen" class="px-4 py-2 text-white dark:text-dark rounded hover:text-blue-400 dark:hover:text-blue-400 transition">Unternehmen</a>
            </div>
            <div class="flex justify-center space-x-4">
              <a href="/Angebote" class="px-4 py-2 text-white dark:text-dark rounded hover:text-blue-400 dark:hover:text-blue-400 transition">Preise</a>
              <a href="/Kontakt" class="px-4 py-2 text-white dark:text-dark rounded hover:text-blue-400 dark:hover:text-blue-400 transition">Kontakt</a>
            </div>
          </div>
        </div>

        <nav class="flex items-center justify-center gap-x-5 -mt-32 mb-10">
          <NavigationSocial />
        </nav>

        <p class="text-half-sm text-halfdark text-center -mb-12">Copyright © 2024 Maxim Mjakinin. Alle Rechte vorbehalten.</p>

        <div class="footer-content flex items-center text-white dark:text-black mt-8">
          <p>&lt;</p>
          <a href="/Impressum" class="dark:text-blue-400 text-blue-400">Impressum</a>
          <p>/</p>
          <a href="/Datenschutz" class="dark:text-blue-400 text-blue-400">Datenschutz</a>
          <p>&gt;</p>
        </div>
      </footer>
    ) : isIndex ? (
      <footer id="footer" class="footer text-half-sm sm:text-xl md:text-2xl bg-black bg-opacity-30 dark:bg-white dark:bg-opacity-20 mt-0">
        <p class="text-half-sm text-halfdark text-center -mb-4">Copyright © 2024 Maxim Mjakinin. Alle Rechte vorbehalten.</p>
        <div class="footer-content flex items-center text-white dark:text-black">
          <p>&lt;</p>
          <a href="/Impressum" class="dark:text-blue-400 text-blue-400">Impressum</a>
          <p>/</p>
          <a href="/Datenschutz" class="dark:text-blue-400 text-blue-400">Datenschutz</a>
          <p>&gt;</p>
        </div>
      </footer>
    ) : (
      <footer id="footer" class="footer text-half-sm sm:text-xl md:text-2xl bg-black bg-opacity-30 dark:bg-white dark:bg-opacity-20 mt-20">
        <div class="relative lg:container md:mx-auto w-full lg:px-60 mt-20 mb-32">
          <h3 class="text-center transition-transform duration-300 transform hover:scale-105">Das sagen die Kunden:</h3>
        </div>
        
        <div class="mb-48">
          <script>
          document.addEventListener("DOMContentLoaded", function() {
            const isDarkMode = localStorage.getItem("theme") === "dark";
            const scriptUrl = isDarkMode 
              ? 'https://cdn.trustindex.io/loader.js?1a60658337913104ee867f3f954'
              : 'https://cdn.trustindex.io/loader.js?b45ce4333ebd2989b176b97ee25';

            const script = document.createElement('script');
            script.defer = true;
            script.async = true;
            script.src = scriptUrl;

            document.querySelector('div.relative').appendChild(script);
          });
          </script>
        </div>

        <div class="flex justify-center my-4 -mt-10">
          <div class="border-t-2 border-white dark:border-dark w-1/2"></div>
        </div>

        <div class="text-center text-half-md mb-44 md:mb-40">
          <div class="flex flex-col md:flex-row md:justify-center md:space-x-4">
            <div class="flex justify-center space-x-4 mb-2 md:mb-0">
              <a href="/" class="px-4 py-2 text-white dark:text-dark rounded hover:text-blue-400 dark:hover:text-blue-400 transition">Start</a>
              <a href="/About" class="px-4 py-2 text-white dark:text-dark rounded hover:text-blue-400 dark:hover:text-blue-400 transition">About</a>
              <a href="/Unternehmen" class="px-4 py-2 text-white dark:text-dark rounded hover:text-blue-400 dark:hover:text-blue-400 transition">Unternehmen</a>
            </div>
            <div class="flex justify-center space-x-4">
              <a href="/Angebote" class="px-4 py-2 text-white dark:text-dark rounded hover:text-blue-400 dark:hover:text-blue-400 transition">Preise</a>
              <a href="/Kontakt" class="px-4 py-2 text-white dark:text-dark rounded hover:text-blue-400 dark:hover:text-blue-400 transition">Kontakt</a>
            </div>
          </div>
        </div>

        <nav class="flex items-center justify-center gap-x-5 -mt-32 mb-10">
          <NavigationSocial />
        </nav>

        <p class="text-half-sm text-halfdark text-center -mb-12">Copyright © 2024 Maxim Mjakinin. Alle Rechte vorbehalten.</p>

        <div class="footer-content flex items-center text-white dark:text-black mt-8">
          <p>&lt;</p>
          <a href="/Impressum" class="dark:text-blue-400 text-blue-400">Impressum</a>
          <p>/</p>
          <a href="/Datenschutz" class="dark:text-blue-400 text-blue-400">Datenschutz</a>
          <p>&gt;</p>
        </div>
      </footer>
    )}
  </>
)}

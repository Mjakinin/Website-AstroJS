---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import NavigationMobile from "../components/NavigationMobile.astro";

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
  <head>
    
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon1.svg" />

  <!-- Google tag (gtag.js) -->
  <script
    type='test/partytown'
    async src="https://www.googletagmanager.com/gtag/js?id=G-8KQPMT3NVB">
  </script>
    <script type='test/partytown'>
      window.dataLayer = window.dataLayer || [];
      function gtag(){
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-8KQPMT3NVB');
    </script>

    <title>{title}</title>
  </head>
  
  <body class="font-mono dark:bg-light bg-dark dark:text-dark text-light">


    <main id="swup" class="relative md:container md:mx-auto w-full ">
      <Header />
      <article class="swuptransition-fade text-half-sm px-4 py-8 sm:text-xl md:text-2xl">
        <slot />
      </article>
      <NavigationMobile />
    </main>

    <script src="../js/app.js" src="../js/extras.js"></script>


  </body>
</html>
<style is:global>
  @import "../styles/base.css";
</style>
